<div class="ai-prestep">
  <h3 class="h5">{{#str}} domainsselection, aiplacement_classifyassist {{/str}}</h3>
  <p class="text-muted">{{#str}} domainsselection_help, aiplacement_classifyassist {{/str}}</p>

  <div class="form-group">
    {{#options}}
      <div class="form-check mb-2">
        <input class="form-check-input"
               type="checkbox"
               name="classify-domains"
               value="{{value}}">
        <label class="form-check-label">{{label}}</label>
        {{#help}}<div class="form-text text-muted small">{{help}}</div>{{/help}}
      </div>
    {{/options}}
    {{^options}}
      <div class="text-muted">{{#str}} domainsselection_empty, aiplacement_classifyassist {{/str}}</div>
    {{/options}}
  </div>

  <div class="mt-3 d-flex" style="gap:.5rem;">
    <button class="btn btn-primary" data-action="continue" disabled>
      {{#str}} continue, core {{/str}}
    </button>
    <button class="btn btn-secondary" data-action="back">
      {{#str}} back, core {{/str}}
    </button>
    <button class="btn btn-secondary" data-action="cancel">
      {{#str}} cancel, core {{/str}}
    </button>
  </div>
</div>
