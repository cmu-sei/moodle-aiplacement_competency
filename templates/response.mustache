{{!
    @template aiplacement_competency/response
    Renders the AI classification result card with framework, levels, and suggested competencies.
}}
{{! Expected context: action, heading, uniqid, frameworkid, frameworkshortname, usedlevels, competencies }}
{{! JS hooks: [data-action="regenerate"], [data-action="copytoclipboard"], [data-action="applycmps"] }}

<section class="course-assist-response card mb-3" data-action-performed="{{action}}">
  <div class="card-body p-3">
    <h3 class="course-assist-response-header h5 card-title d-inline">
      <span class="ai-course-assist-sparkles-icon">
        {{#pix}} sparkles, aiplacement_competency {{/pix}}
      </span>
      {{heading}}
    </h3>

    <div class="card-text content mt-3">
      <div id="course-assist-response-content-{{uniqid}}" class="course-assist-response-content mb-3">
        <dl class="row">
          <!-- Framework -->
          <dt class="col-sm-4">{{#str}} frameworkshortname, aiplacement_competency {{/str}}</dt>
          <dd class="col-sm-8" data-frameworkid="{{frameworkid}}">
            {{#frameworkshortname}}
              {{frameworkshortname}}
            {{/frameworkshortname}}
            {{^frameworkshortname}}
              <span class="text-muted">{{#str}} none, aiplacement_competency {{/str}}</span>
            {{/frameworkshortname}}
          </dd>

          <!-- Levels -->
          <dt class="col-12 col-sm-4 fw-semibold"
              style="white-space:normal; word-break:normal !important; overflow-wrap:normal !important; hyphens:none;">
            {{#str}} levels, aiplacement_competency {{/str}}
          </dt>
          <dd class="col-sm-8">
            <ul class="list-unstyled mb-0 pl-0">
              {{#usedlevels}}
                <li class="text-capitalize">{{.}}</li>
              {{/usedlevels}}
              {{^usedlevels}}
                <li class="text-muted">{{#str}} none, aiplacement_competency {{/str}}</li>
              {{/usedlevels}}
            </ul>
          </dd>

          <!-- Competencies -->
          <dt class="col-sm-4 text-nowrap">{{#str}} competencies, aiplacement_competency {{/str}}</dt>
          <dd class="col-sm-8" data-section="competencies">
            <ul class="list-unstyled mb-0 pl-0">
              {{#competencies}}
                <li>{{.}}</li>
              {{/competencies}}
              {{^competencies}}
                <li class="text-muted">{{#str}} none, aiplacement_competency {{/str}}</li>
              {{/competencies}}
            </ul>
          </dd>
        </dl>
      </div>

      <div class="course-assist-response-watermark">
        <small class="text-muted">
          <span class="ai-course-assist-sparkles-icon">
            {{#pix}} sparkles, aiplacement_competency {{/pix}}
          </span>
          {{#str}} contentwatermark, core_ai {{/str}}
        </small>
      </div>

      <div class="course-assist-controls d-flex gap-2 pt-3">
        <button class="btn btn-sm btn-outline-secondary" data-action="regenerate">
          {{#pix}} a/refresh, core {{/pix}}
          {{#str}} regenerate, aiplacement_competency {{/str}}
        </button>

        <button class="btn btn-sm btn-outline-secondary"
                data-action="copytoclipboard"
                data-clipboard-target="#course-assist-response-content-{{uniqid}}">
          {{#pix}} e/copy, core {{/pix}}
          {{#str}} copy, aiplacement_competency {{/str}}
        </button>

        <!-- Keep or rename based on your JS handler -->
        <button class="btn btn-sm btn-outline-secondary" data-action="applycmps">
          {{#str}} applycompetencies, aiplacement_competency {{/str}}
        </button>
      </div>
    </div>
  </div>
</section>