<div class="ai-prestep">
    <h3 class="h5">
        {{#str}} frameworkselection, aiplacement_classifyassist {{/str}}
    </h3>
    <p class="text-muted">
        {{#str}} frameworkselection_help, aiplacement_classifyassist {{/str}}
    </p>

    <div class="form-group">
        <label for="classify-preselect">
            {{#str}} frameworkselection_label, aiplacement_classifyassist {{/str}}
        </label>
        <select id="classify-preselect" class="custom-select">
            <option value="" selected disabled>
                {{#str}} frameworkselection_placeholder, aiplacement_classifyassist {{/str}}
            </option>
        </select>
    </div>

    <div class="mt-3 d-flex" style="gap:.5rem;">
        <button class="btn btn-primary" data-action="continue" disabled>
            {{#str}} continue, core {{/str}}
        </button>
        <button class="btn btn-secondary" data-action="cancel">
            {{#str}} cancel, core {{/str}}
        </button>
    </div>
</div>
